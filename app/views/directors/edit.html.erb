<h1>Edit Director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(model: @director, data: { turbo: false }) do |form| %>

  <div>
    <%= form.label :name %>
    
    <%= form.text_field :name %>
  </div>

    <div>
    <%= form.label :dob %>
    
    <%= form.text_field :dob %>
  </div>

  <div>
    <%= form.text_field :bio %>

    <%= form.text_area :bio, { rows: 3 } %>
  </div>

  <div>
  <%= form.button %>
  </div>
<% end %>

 <form action="<%= directors_path %>" method="post" data-turbo="false">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
